{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "target": "es2015",
        "jsx": "react",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*",
        "config/types/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
